<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.woo.s1.board.qna.QnaDAO">
  	
  	<sql id="qnaCondition">
  		<where>
  			<if test="kind=='title'">
  				TITLE LIKE '%'||#{search}||'%'
  			</if>
  			<if test="kind=='contents'">
  				CONTENTS LIKE '%'||#{search}||'%'
  			</if>
  			<if test="kind=='writer'">
  				WRITER LIKE '%'||#{search}||'%'
  			</if>
  		</where>
  	</sql>
  
  	<select id="getTotalCount" parameterType="pager" resultType="Long">
  		SELECT COUNT(NUM) FROM Qna
  		<include refid="qnaCondition"></include>
  	</select>
  	
  	<select id="getBoardList" parameterType="Pager" resultType="qnaDTO">
	  	SELECT * FROM
	  	(
		  	SELECT ROWNUM R, N.* FROM
		  		(
			  		SELECT NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT FROM qna
			  		<include refid="qnaCondition"></include>
			  		ORDER BY NUM DESC
		  		) N
	  	)
	  	WHERE R BETWEEN #{startRow} AND #{lastRow} 
  	</select>
  	
  	<select id="getBoardDetail" parameterType="BoardDTO" resultType="NoticeDTO">
  		SELECT * FROM NOTICE WHERE NUM=#{num}
  	</select>
  	
  	<insert id="setBoardAdd" parameterType="BbsDTO">
  		<selectKey keyProperty="num" resultType="Long" order="BEFORE">
  			SELECT QNA_SEQ.NEXTVAL FROM DUAL
  		</selectKey>
  		INSERT INTO QNA (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT, REF, STEP, DEPTH)
  		VALUES (#{num}, #{title}, #{contents}, #{writer}, sysdate, 0, #{num}, 0, 0)
  	</insert>
  
  </mapper>